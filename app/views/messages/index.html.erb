
<div style = 'margin-top:58px;'>
    <% @messages.each do |message| %>
        <%= render 'home/message', :message => message.content, 
        :datetime => message.created_at, :message_sent => true %>
        <h5> <%= link_to 'more', message_path(message) %> </h5>
    <% end %>
</div>

<%= link_to 'New',  new_message_path(@message) %>