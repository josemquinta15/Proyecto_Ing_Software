<li class="list-group-item">
    <div class="media align-items-lg-center flex-column flex-lg-row p-3">
        <div class = 'row'>
            <div class = 'col-md-4'>
                <% if @post.images.attached? %>
                    <%= image_tag(url_for(@post.images.first), :alt => "First slide", :class => "ml-lg-5 order-1 order-lg-2", :height => '150') %>
                <% else %>
                    <%= image_tag('/assets/home/no_image-029092a34684b6e053f093867902beef848506a6280a6765a59e319c892450b3.jpg', :class => "ml-lg-5 order-1 order-lg-2", :height => "150") %>
                <% end %>
            </div>
            <%= link_to posts_show_path(@post.id), class: "media-body order-2 order-lg-1 col-md-8", style: "color:inherit;text-decoration: none;margin-top:1.5%;" do %>
                <div>
                    <h5 class="mt-0 font-weight-bold mb-2"><%= @post.title%></h5>
                    <p class="font-italic text-muted mb-0 small"><%= @post.text %></p>

                    <div class="d-flex align-items-center justify-content-between mt-1">
                        <h6 class="font-weight-bold my-2"><%= @post.parsed_price%></h6>
                        <ul class="list-inline small">
                            <% if @post.user.rating > 0%>
                                <% for i in 1..(@post.user.rating) %>
                                    <span class="fa fa-star checked"></span>
                                <% end %>
                                <% for i in 1..(5 - @post.user.rating) %>
                                    <span class="fa fa-star"></span>
                                <% end %>
                            <% else %>
                                <% for i in 1..5 %>
                                    <span class="fa fa-star"></span>
                                <% end %>
                            <% end %>
                            
                        </ul>
                    </div>
                    
                </div>
            <% end %>
        </div>

    </div>
</li>